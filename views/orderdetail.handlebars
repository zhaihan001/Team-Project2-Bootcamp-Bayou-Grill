<div class="row mt-4">
    <div class="col-md-6">
        <h3>Order Details:</h3>
        <div>
            {{#each orderDetail as |item|}}
            <ul>{{food.name}} --- ${{food.price}}<br></ul>
            {{/each}}

            {{#each orderPurchaseData as |item|}}
            <li>Total Items Ordered: {{itemCount}}<br></li>
            <li>Total Cost: ${{totalCost}}<br></li>
            <li>Order Data: {{format_date date_created}}</li>
            {{/each}}
        </div>
        <button class="btn btn-primary glow-on-hover back" type="button">Back to Order History</button>
        <button class="btn btn-primary glow-on-hover export" type="submit">Export Receipt</button>
    </div>
</div>


<script src="/js/orderdetail.js"></script>